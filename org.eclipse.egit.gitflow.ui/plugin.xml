            locationURI="popup:org.eclipse.egit.ui.RepositoriesView?after=group.open">
			<command
                  commandId="org.eclipse.egit.gitflow.ui.command.init"
                  label="%TeamGitFlowInit.name"
                  style="push">
				<visibleWhen
                     checkEnabled="false">
					<iterate
                       ifEmpty="false"
                       operator="and">
						<and>
							<not>
								<adapt type="org.eclipse.jgit.lib.Repository">
									<test
                                forcePluginActivation="true"
                                property="GitFlowRepository.isInitialized">
